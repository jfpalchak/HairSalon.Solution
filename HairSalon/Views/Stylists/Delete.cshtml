@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<div class="banner container">
  <h2>Are you sure you want to remove this stylist?</h2>
  <br/>
  <h3>Stylist: @Html.DisplayFor(model => model.Name)</h3>
</div>

<br/>

<div class="form container">
  @using (Html.BeginForm())
  {
    <input type="submit" value="Delete" class="btn btn-danger" />
  }
</div>

<br/>

<div class="links container">
  <h4>@Html.ActionLink("Go Back", "Details", new { id = Model.StylistId })</h4>
</div>