@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<div class="container">
  <div class="row container">
    <div class="col left">
      <div class="details container">
        <h2>Stylist</h2>
        <h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
        <h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h3>
      </div>

      <br/>

      <div class="links container">
        <h4>@Html.ActionLink("Add a Client", "Create", "Clients", new { id = Model.StylistId })</h4>
        <h5>@Html.ActionLink("Remove Stylist", "Delete", new { id = Model.StylistId })</h5>
        <br/>
      </div>
    </div>

    <div class="col-7 right">
    @if (Model.Clients.Count == 0)
    {
      <div class="empty container">
        <h3>@Model.Name currently has no clients.</h3>
      </div>
    }
    else
    {
      <div class="display-list container">
        <h4>Current Clients:</h4>
        <ul>
          @foreach(Client client in Model.Clients)
          {
            <li><h3>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</h3></li>
          }
        </ul>
      </div>
    }
    </div>
  </div>
</div>