@{
  Layout = "_Layout";
}

@using HairSalon.Models;

@if (Model.Count == 0)
{
  <div class="empty container">
    <h3>The Salon currently has no stylists.</h3>
  </div>

  <br/>

  <div class="necessary container">
    <h4>@Html.ActionLink("Add a New Stylist", "Create")</h4>
  </div>
}
else
{
  <div class="container">
    <div class="row container">
      <div class="col left">
        <div class="links container">
          <h3>@Html.ActionLink("Add a New Stylist", "Create")</h3>
        </div>
      </div>


      <div class="col-7 right">
        <div class="display-list container">
          <ul>
            @foreach(Stylist stylist in Model)
            {
              <li><h2>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</h2></li>
            }
          </ul>
        </div>
      </div>
    </div>
  </div>
}