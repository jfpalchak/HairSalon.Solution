@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Available Stylists</h1>

@if (Model.Count == 0)
{
  <h3>The Salon currently has no available stylists.</h3>
}
else
{
  <ul>
    @foreach(Stylist stylist in Model)
    {
      <li><h4>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</h4></li>
    }
  </ul>
}

<br/>
<p>@Html.ActionLink("Home Page", "Index", "Home")</p>>