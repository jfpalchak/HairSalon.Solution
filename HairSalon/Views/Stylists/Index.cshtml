@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="header container">
  <h1>Available Stylists</h1>
</div>

@if (Model.Count == 0)
{
  <div class="empty container">
    <h3>The Salon currently has no available stylists.</h3>
  </div>
}
else
{
  <div class="display-list container">
    <ul>
      @foreach(Stylist stylist in Model)
      {
        <li><h4>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</h4></li>
      }
    </ul>
  </div>
}

<br/>

<div class="links container">
  <p>@Html.ActionLink("Add a New Stylist", "Create")</p>
  <p>@Html.ActionLink("Home Page", "Index", "Home")</p>
</div>