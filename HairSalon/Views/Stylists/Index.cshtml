@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="header container">
  <h1>Available Stylists</h1>
</div>

@await Html.PartialAsync("NavBar")

<br/>

@if (Model.Count == 0)
{
  <div class="empty container">
    <h3>The Salon currently has no stylists.</h3>
  </div>
}
else
{
  <div class="display-list container">
    <ul>
      @foreach(Stylist stylist in Model)
      {
        <li><h4>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</h4></li>
      }
    </ul>
  </div>
}

<br/>

<div class="links container">
  <h4>@Html.ActionLink("Add a New Stylist", "Create")</h4>
  @if(Model.Count > 0)
  {
    <h4>@Html.ActionLink("Add a Client", "Create", "Clients")</h4>
  }
</div>