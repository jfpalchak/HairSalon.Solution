@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="header">
  <div class="container">
    <h1>Current Salon Clients</h1>
  </div>

  @await Html.PartialAsync("NavBar")

  <br/>
</div>

@if(Model.Count == 0)
{
  <div class="empty container">
    <h3>The Salon currently has no clients.</h3>
  </div>
}
else
{
  <div class="container">
    <div class="row container">
      <div class="col left">
        <div class="links container">
          <h3>@Html.ActionLink("Add a New Client", "Create")</h3>
        </div>
      </div>

      <div class="col-8 right">
        <div class="display-list container">
          <ul>
            @foreach(Client client in Model)
            {
              <li><h2>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</h2></li>
            }
          </ul>
        </div>
      </div>
    </div>
  </div>
}