@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Client;

<div class="header container">
  <h1>Add a New Client</h1>
</div>

@await Html.PartialAsync("NavBar")

<br/>

@if(ViewBag.NoStylistsBool)
{
  <div class="empty container">
    <h3>There are no stylists available to book a client!</h3>
    <p><strong>NOTE:</strong>There must be at least one stylist in the Salon before you can book a client.</p>
    <h4>@Html.ActionLink("Add a Stylist", "Create", "Stylists")</h4>
  </div>
}
else
{
  <div class="form container">
    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)
      <br/>
      @Html.LabelFor(model => model.Stylist)
      @* <br/> *@
      @Html.DropDownList("StylistId")
      <br/>
      <br/>
      <input type="submit" value="Submit" class="btn btn-primary" />
    }
  </div>
}

<br/>

<div class="links container">
  <p>@Html.ActionLink("Back to Clients", "Index")</p>
</div>
